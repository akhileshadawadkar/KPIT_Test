@model IEnumerable<Test.Models.tbl_Employees>

<br /><br />
@using (Html.BeginForm("Index", "Home"))
{
    <b>Search By :</b>
    <br />

    @Html.DropDownList("SearchBy", new List<SelectListItem>
{
    new SelectListItem{Text="Salary", Value="Salary" },
    new SelectListItem{Text="Age", Value="Age" },
    new SelectListItem{Text="Location", Value="Location" }
})
    <br />
    <br />
    @Html.TextBox("Search")<input type="submit" id="Searchbtn" value="Search" />

}

<br />
@if (TempData["Msg"] != null)
{
<h6 style="color:red">
    @TempData["Msg"].ToString();
</h6>
}
<table class="table" border="1">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Name
            </th>
            <th>
                Age
            </th>
            <th>
                Marital Status
            </th>
            <th>
                Salary
            </th>
            <th>
                Location
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody id="DataSearching">
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="7" style="color:red">
                    No records found..
                </td>
            </tr>
        }
        @foreach (var item in Model)
        {
            <tr id="@item.ID">
                <td>
                    @item.ID
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Age
                </td>
                <td>
                    @item.Marital_Status
                </td>
                <td>
                    @item.Salary
                </td>
                <td>
                    @item.Location
                </td>
                <td>
                    <a class="delete" id="@item.ID" href="#">Delete</a>

                </td>
            </tr>

        }
    </tbody>

</table>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>
    $(document).ready(function () {

        $('a.delete').click(function () {
            var id = $(this).attr("id");
            if (confirm("Are you sure you want to delete?"))
                $.ajax({
                    url: '/Home/Delete', type: "POST", dataType: "text",
                    data: { id: id },
                    success: function (data) {
                        $('#tr' + id).html(data);
                        $('#' + id).remove();
                    },
                    error: function (status, error) {

                        alert(status);
                        alert(error);
                    }
                });
        });
    });

</script>
